<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/red_white"
    android:padding="20dp"
    android:elevation="10dp"
    android:clipToPadding="false"
    tools:context=".LoginActivity">


    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="20dp"
        android:background="@drawable/layout_bg_color">

        <TextView
            android:id="@+id/login_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/login_activity"
            android:textColor="@color/heading_text"
            android:textSize="45sp"
            android:drawableBottom="@drawable/divider"
            android:drawableTint="@color/heading_text"
            android:layout_marginBottom="10dp"
            android:drawablePadding="10dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg_color"
            android:padding="10dp"
            android:hint="E-Mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hint_text"
            android:drawableLeft="@drawable/icon_email"
            android:drawableTint="@color/hint_text"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:drawablePadding="10dp"/>

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg_color"
            android:padding="10dp"
            android:hint="Password"
            android:layout_marginVertical="10dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hint_text"
            android:drawableLeft="@drawable/icon_password"
            android:drawableTint="@color/hint_text"
            android:layout_marginHorizontal="20dp"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/login_forgot_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Forgo Password?"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/hint_text"
            android:textStyle="bold"/>


        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg_color"
            android:textStyle="bold"
            android:textColor="@color/white_text"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</LinearLayout>